<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Funding</base>
  <class>ApplicationProcess</class>
  <name>civicrm_funding_application_process</name>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FundingApplicationProcess ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>identifier</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <dataPattern>/^[\p{L}\p{N}\p{P}]+$/u</dataPattern>
    <comment>Unique generated identifier</comment>
    <html>
      <type>Text</type>
    </html>
  </field>
  <index>
    <name>index_identifier</name>
    <fieldName>identifier</fieldName>
    <unique>true</unique>
  </index>

  <field>
    <name>funding_case_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to FundingCase</comment>
    <html>
      <type>EntityRef</type>
    </html>
  </field>
  <foreignKey>
    <name>funding_case_id</name>
    <table>civicrm_funding_case</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>status</name>
    <type>varchar</type>
    <length>64</length>
    <required>true</required>
    <pseudoconstant>
      <callback>Civi\Funding\FundingPseudoConstants::getApplicationProcessStatus</callback>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>creation_date</name>
    <type>timestamp</type>
    <required>true</required>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>modification_date</name>
    <type>timestamp</type>
    <required>true</required>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>title</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>short_description</name>
    <type>varchar</type>
    <length>500</length>
    <required>true</required>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>start_date</name>
    <type>timestamp</type>
    <required>false</required>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>end_date</name>
    <type>timestamp</type>
    <required>false</required>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>request_data</name>
    <type>text</type>
    <required>true</required>
    <serialize>JSON</serialize>
  </field>

  <field>
    <name>amount_requested</name>
    <type>decimal(10,2)</type>
    <required>true</required>
    <crmType>CRM_Utils_Type::T_MONEY</crmType>
    <dataPattern>/^\d{1,10}(\.\d{2})?$/</dataPattern>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>is_review_content</name>
    <type>boolean</type>
    <required>false</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <!-- shortened because of limited FK identifier length -->
    <name>reviewer_cont_contact_id</name>
    <type>int unsigned</type>
    <required>false</required>
    <comment>FK to Contact</comment>
    <html>
      <type>EntityRef</type>
    </html>
  </field>
  <foreignKey>
    <name>reviewer_cont_contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

  <field>
    <name>is_review_calculative</name>
    <type>boolean</type>
    <required>false</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <!-- shortened because of limited FK identifier length -->
    <name>reviewer_calc_contact_id</name>
    <type>int unsigned</type>
    <required>false</required>
    <comment>FK to Contact</comment>
    <html>
      <type>EntityRef</type>
    </html>
  </field>
  <foreignKey>
    <name>reviewer_calc_contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

  <field>
    <name>is_eligible</name>
    <type>boolean</type>
    <required>false</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>
  <index>
    <name>index_is_eligible</name>
    <fieldName>is_eligible</fieldName>
  </index>

  <field>
    <name>is_in_work</name>
    <type>boolean</type>
    <required>true</required>
    <comment>Is the application in work by the applicant?</comment>
    <html>
      <type>CheckBox</type>
    </html>
  </field>
  <index>
    <name>index_is_in_work</name>
    <fieldName>is_in_work</fieldName>
  </index>

  <field>
    <name>is_rejected</name>
    <type>boolean</type>
    <required>true</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>
  <index>
    <name>index_is_rejected</name>
    <fieldName>is_rejected</fieldName>
  </index>

  <field>
    <name>is_withdrawn</name>
    <type>boolean</type>
    <required>true</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>
  <index>
    <name>index_is_withdrawn</name>
    <fieldName>is_withdrawn</fieldName>
  </index>
</table>
