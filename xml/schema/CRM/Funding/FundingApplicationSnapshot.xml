<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Funding</base>
  <class>ApplicationSnapshot</class>
  <name>civicrm_funding_application_snapshot</name>
  <comment>Snapshots of application versions that need to be preserved</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FundingApplicationSnapshot ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>application_process_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to FundingApplicationProcess</comment>
    <html>
      <type>EntityRef</type>
    </html>
    <pseudoconstant>
      <table>civicrm_funding_application_process</table>
      <keyColumn>id</keyColumn>
      <labelColumn>title</labelColumn>
      <prefetch>false</prefetch>
    </pseudoconstant>
  </field>
  <foreignKey>
    <name>application_process_id</name>
    <table>civicrm_funding_application_process</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

  <field>
    <name>status</name>
    <type>varchar</type>
    <length>64</length>
    <required>true</required>
    <pseudoconstant>
      <callback>Civi\Funding\FundingPseudoConstants::getApplicationProcessStatus</callback>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>creation_date</name>
    <type>timestamp</type>
    <required>true</required>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>title</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>short_description</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>start_date</name>
    <type>timestamp</type>
    <required>false</required>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>end_date</name>
    <type>timestamp</type>
    <required>false</required>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>request_data</name>
    <type>text</type>
    <required>true</required>
    <serialize>JSON</serialize>
  </field>

  <field>
    <name>cost_items</name>
    <type>text</type>
    <required>true</required>
    <serialize>JSON</serialize>
  </field>

  <field>
    <name>resources_items</name>
    <type>text</type>
    <required>true</required>
    <serialize>JSON</serialize>
  </field>

  <field>
    <name>amount_requested</name>
    <type>decimal(10,2)</type>
    <required>true</required>
    <crmType>CRM_Utils_Type::T_MONEY</crmType>
    <dataPattern>/^\d{1,10}(\.\d{2})?$/</dataPattern>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>is_review_content</name>
    <type>boolean</type>
    <required>false</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>is_review_calculative</name>
    <type>boolean</type>
    <required>false</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>is_eligible</name>
    <type>boolean</type>
    <required>false</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>custom_fields</name>
    <type>mediumtext</type>
    <crmType>CRM_Utils_Type::T_TEXT</crmType>
    <required>true</required>
    <serialize>JSON</serialize>
  </field>

</table>
